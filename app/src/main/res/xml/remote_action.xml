<?xml version="1.0" encoding="utf-8"?>
<remote-actions version="1.2">
    <action
        id="shutter"
        label="@string/shutter"
        priority="1"
        trigger_key="CTRL_LEFT+A">
        <preference name="gesture" value="click"/>
        <preference name="button_only" value="true"/>
    </action>

    <action
        id="camera_switch"
        label="@string/camera_switch"
        priority="2"
        trigger_key="CTRL_LEFT+B">
        <preference name="gesture" value="double_click|swipe_up|swipe_down"/>
    </action>

    <action
        id="next_filter"
        label="@string/next_filter"
        priority="3"
        trigger_key="CTRL_LEFT+C">
        <preference name="gesture" value="swipe_left"/>
    </action>

    <action
        id="prev_filter"
        label="@string/prev_filter"
        priority="4"
        trigger_key="CTRL_LEFT+D">
        <preference name="gesture" value="swipe_right"/>
    </action>

    <action
        id="zoom_in"
        label="@string/zoom_in"
        priority="5"
        trigger_key="CTRL_LEFT+E"
        repeatable="true"
        repeatable_interval="short">
        <preference name="gesture" value="circle_cw"/>
        <preference name="motion_only" value="true"/>
    </action>

    <action
        id="zoom_out"
        label="@string/zoom_out"
        priority="6"
        trigger_key="CTRL_LEFT+F"
        repeatable="true"
        repeatable_interval="short">
        <preference name="gesture" value="circle_ccw"/>
        <preference name="motion_only" value="true"/>
    </action>

</remote-actions>